<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Oakmaster</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap" rel="stylesheet"   >
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body{
            /* background: blue; */
            font-family: 'Open Sans', sans-serif;
        }
        .hor-row{
            width: 100%;
            text-align: center;
            float: left;
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            text-align: center;
        }
        .container-main{
            width: 100%;
            float: none;
            margin: auto;
            max-width: 1000px;
            padding: 50px 20px 60px;
        }
        .header-container{
            grid-template-columns: 280px auto;
            display: grid;
        }
        .logo-container img{
            width: calc(100% - 50px);
            float: left;
            margin: -10px 0 0 20px;
        }
        h2{
            text-align: right!important;
            font-size: 40px!important;
            padding-right: 10px!important;
            color: red;
    
        }
        .content-main{
            display: grid;
            grid-template-columns: auto 360px;
            grid-gap: 0px;
            margin: 60px 0 0;
        }
        .right-side-content{
            padding-left: 30px;
        }
        .image-container img{
            width: 100%;
            margin: 30px 0 0;
        }
        .value-container{
            font-size: 13px;
            text-align: left;
            margin: 3px 0;
            font-weight: 550;
        }
        .total-value-container{
            margin: 50px 0 0;
            text-align: right;
            font-size: 30px;
            font-weight: bold;
            line-height: 35px;
    
        }
        .total-label{
            margin-right: 5px;
            font-size: 14px;
            text-align: right;
            width: 80px;
            float: left;
            display: inline-block;
            width: calc(100% - 125px);
        }
        .total-value{
            width: 120px;
            display: inline-block;
            text-align: right;
            float: left;
        }
        .price-note-text{
            text-align: right;
            font-size: 13px;
        }
        .talk-to-us-content{
            text-align: left;
            padding-left: 30px;
            color: red;
            font-size: 14px;
            font-weight: 555;
            margin-top: 50px;
        }
    
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap" rel="stylesheet">
  </head>
  
<body class="hor-row">
    <div class="hor-row container-main">
        <div class="hor-row header-container">
            <div class="hor-row logo-container">
                <img src="{{ oakmasterLogo }}" alt = 'logo' />
            </div>
            <h2 class="hor-row">Quotaion Summary </h2>
        </div>
        
        <div class="hor-row">
            <div class="hor-row content-main">
                <div class="right-side-content">
                    <div class="hor-row value-container">
                        NUMBER OF BAYS: {{data["Number Of Bays"]}}
                    </div>
                    <div class="hor-row value-container">
                        ROOF PITCH: {{data["Roof Pitch"]}}
                    </div>
                    <div class="hor-row value-container">
                        WALL CLADING MATERIAL: {{data["Wall Cladding Material"]}}
                    </div>
                    <div class="hor-row value-container">
                        LEFT ROOF TYPE: {{data["Left Roof Type"]}}
                    </div>
                    <div class="hor-row value-container">
                        RIGHT ROOF TYPE: {{data["Right Roof Type"]}}
                    </div>
                    {% if data["Left Log Store"] %}
                        <div class="hor-row value-container">
                            LEFT LOG STORE: YES
                        </div>
                    {% endif %}
                    
                    {% if data["Right Log Store"] %}
                        <div class="hor-row value-container">
                            RIGHT LOG STORE: YES
                        </div>
                    {% endif %}
                    
                    {% if data["Partition 1"] %}
                        <div class="hor-row value-container">
                            PARTITION 1: YES
                        </div>
                    {% endif %}
                    
                    {% if data["Partition 2"] %}
                        <div class="hor-row value-container">
                            PARTITION 2: YES
                        </div>
                    {% endif %}

                    {% if data["Partition 3"] %}
                        <div class="hor-row value-container">
                            PARTITION 3: YES
                        </div>
                    {% endif %}

                    <div class="hor-row value-container">
                        DOOR MATERIAL: {{data["Door Material"]}}
                    </div>
                    {% if data["Door 1"] %}
                        <div class="hor-row value-container">
                            DOOR 1: YES
                        </div>
                    {% endif %}
                    
                    {% if data["Door 2"] %}
                        <div class="hor-row value-container">
                            DOOR 2 YES
                        </div>
                    {% endif %}
                    
                    {% if data["Door 3"] %}
                        <div class="hor-row value-container">
                            DOOR 3: YES
                        </div>
                    {% endif %}
                    
                    {% if data["Door 4"] %}
                        <div class="hor-row value-container">
                            DOOR 4: YES
                        </div>
                    {% endif %}
                    
                    <div class="hor-row value-container">
                        GARAGE LENGTH: {{data["garageLength"]}}
                    </div>
                    <div class="hor-row value-container">
                        GARAGE WIDTH: 5.6m
                    </div>
                    <div class="hor-row value-container">
                        GARAGE HEIGHT: {{data["garageHeight"]}}
                    </div>
                    <div class="hor-row value-container">
                        LOG LENGTH: {{data["logLength"]}}
                    </div>
                    <div class="hor-row value-container">
                        LOG WIDTH: {{data["logWidth"]}}
                    </div>
                </div>
                <div class="image-container">
                    <img src="{{ sampleImage }}"/>
                </div>
            </div>
            <div class="hor-row total-value-container">
                <div class="hor-row" style="text-align: right;">
                    <span class="total-label">NET:</span>
                    <span class="total-value">€{{ data.netPrice }}</span>
                </div>
                <div class="hor-row" style="text-align: right;">
                    <span class="total-label">VAT:</span>
                    <span class="total-value">€{{ data.vatPrice }}</span>
                </div>
                <div class="hor-row" style="text-align: right;">
                    <span class="total-label">GROSS:</span>
                    <span class="total-value">€{{ data.grossPrice }}</span>
                </div>
            </div>
            <div class="hor-row price-note-text">
                <i> (Prices do not includes shipping rates)</i>
            </div>
            <div class="hor-row talk-to-us-content">
                Please call or email if you would like to discuss before placing an order 
                <br/>
                Phone: 01 444 44 00 11
                <br/>
                Email: oak@oak-beams.com
            </div>
        </div>
    </div>
</body>
</html>
